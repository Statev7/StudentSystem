@using Microsoft.AspNetCore.Identity
@using StudentSystem.Data.Models.StudentSystem
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a asp-area="" asp-controller="User" asp-action="Account" class="nav-link text-white" title="Manage">Account</a>
    </li>
    <li class="nav-item">
            <form asp-area="" asp-controller="User" asp-action="Logout" class="form-inline">
            <button  type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-area="" asp-controller="User" asp-action="Register" class="nav-link text-white">Register</a>
    </li>
    <li class="nav-item">
            <a asp-area="" asp-controller="User" asp-action="Login" class="nav-link text-white">Login</a>
    </li>
}
</ul>
